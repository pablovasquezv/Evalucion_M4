<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendMoney">

    <ImageView
        android:id="@+id/imgViewStatusbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="57dp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/statusbar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp" />

    <ImageView
        android:id="@+id/shape"
        android:layout_width="46dp"
        android:layout_height="24dp"
        android:contentDescription="shape"
        android:src="@drawable/shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.096" />

    <TextView
        android:id="@+id/request_money"
        android:layout_width="144dp"
        android:layout_height="29dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginTop="68dp"
        android:gravity="center"
        android:text="@string/send_money_string"
        android:textColor="@color/add_payment_note_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="profile_picture"
        android:src="@drawable/profilepicture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.216" />

    <TextView
        android:id="@+id/reem_khaled"
        android:layout_width="134dp"
        android:layout_height="21dp"

        android:layout_marginStart="11dp"
        android:text="@string/reem_Yara_string"
        android:textColor="@color/add_payment_note_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.023"
        app:layout_constraintStart_toEndOf="@+id/profile_picture"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.204" />

    <TextView
        android:id="@+id/reem_1993_gmail_com"
        android:layout_width="120dp"
        android:layout_height="23dp"

        android:text="@string/reem_yara_khalil_gmail_com_string"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.378"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.257" />

    <TextView
        android:id="@+id/payment_amount_ek2"
        android:layout_width="168dp"
        android:layout_height="19dp"
        android:paddingRight="36dp"
        android:text="@string/payment_send_amount_ek2_string"
        android:textColor="@color/add_payment_note_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.341" />

    <View
        android:id="@+id/rectangle_ek4"
        android:layout_width="336dp"
        android:layout_height="55dp"
        android:background="@drawable/rectangle_ek3_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.399" />

    <TextView
        android:id="@+id/_20_00"
        android:layout_width="56.6dp"
        android:layout_height="28.6dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:text="@string/_12_50_string"
        android:textColor="@color/rectangle_ek2_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_ek4"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_ek4"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="@+id/rectangle_ek4"
        tools:layout_editor_absoluteY="286dp" />

    <View
        android:id="@+id/rectangle_ek3"
        android:layout_width="339dp"
        android:layout_height="198dp"
        android:background="@drawable/rectangle_ek3_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.726" />

    <TextView
        android:id="@+id/add_payment_note"
        android:layout_width="268.4dp"
        android:layout_height="25.4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="154dp"
        android:alpha="0.2494"
        android:text="@string/add_payment_note_string"
        android:textColor="@color/add_payment_note_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_ek3"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_ek3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/rectangle_ek3"
        app:layout_constraintTop_toTopOf="@+id/rectangle_ek3"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/payment_note_ek2"
        android:layout_width="155.4dp"
        android:layout_height="25.4dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="9dp"
        android:text="@string/payment_note_ek2_string"
        android:textColor="@color/add_payment_note_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/rectangle_ek3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_ek4" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="412dp"
        android:layout_height="118dp"
        android:background="@drawable/rectangle"
        android:paddingVertical="36dp"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/rectangle_ek2_color"
            android:drawableLeft="@drawable/send_icon"
            android:drawablePadding="3dp"
            android:paddingLeft="100dp"
            android:paddingRight="90dp"
            android:text="@string/send_payment_string"
            android:textColor="@color/black" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>